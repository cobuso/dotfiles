# Get me some homebrew
if ! command -v brew >/dev/null 2>&1; then
  ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
fi

# Get me some cask
brew install caskroom/cask/brew-cask

# Some homebrew action...
brew install ack \
	dnsmasq \
	python \
	reattach-to-user-namespace \
	tmux \
	tree \
	zsh \
	rbenv \
	ruby-build
		
# Some Neovim
brew tap neovim/neovim
brew install --HEAD neovim

# And now lets get some casks
brew cask install 1password \
	alfred \
	atom \
	charles \
	chefdk \
	cord \
	dropbox \
	ember \
	evernote \
	firefox \
	google-chrome \
	fluid \
	google-adwords-editor \
	grandperspective \
	integrity \
	pycharm \
	istumbler \
	iterm2 \
	kindle \
	mailplane \
	notational-velocity \
	postico \
	seil \
